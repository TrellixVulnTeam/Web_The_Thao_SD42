<style type="text/css">
#form-wrapper
{ 
    
    height:370px;
    padding: 20px;    
    position: relative;
    border: 1px solid #0000; 
    
    background-color: #fff;
}
.form-wrapper1
{ 
    height: 370px;
    padding: 20px;    
    
    border: 1px solid #0000; 
    border-color: #f93;
    background-color: #fff;
}

#form-wrapper label
{
    font: bold 18px/25px Corbel, Arial, Helvetica; 
    float: left; 
    margin-right: 10px; 
    width: 30%; 
}

#form-wrapper .input
{
    font: 15px Arial, Helvetica; 
    padding: 5px;
    margin: 0 0 20px 0;
    border: 1px solid #b9bdc1; 
    width: 60%; 
    color: #000000;   
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    
}

#form-wrapper .input:focus
{
    background-color: #E7E8E7;
    outline: 0;
}


#form-wrapper .button
{
    float: right;
    margin: 10px 0 0 0;
    padding: 7px 15px;
    cursor: pointer;   
    color: #fff;
    font: bold 13px Tahoma, Verdana, Arial;
    text-transform: uppercase;
    overflow: visible; /* IE6/7 fix */
    border: 0;      

    background-color: #f93;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    
    
}

#form-wrapper .button:hover
{
    background-color: #F7AE3F;
    
}

#form-wrapper .button:active
{
    background: #f93;
    position: relative;
    top: 2px;
    
}
