    }
    
    .carousel-multi-item .carousel-indicators li {
        height: .75rem;
        width: .75rem;
        max-width: .75rem;
        background-color: #5cc6c3;
    }
    
    .carousel-multi-item .carousel-indicators .active {
        height: 1rem;
        width: 1rem;
        max-width: 1rem;
        background-color: #5cc6c3;
    }
    
