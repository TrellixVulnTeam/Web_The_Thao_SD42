    }
    
    .carousel-multi-item.v-2.product-carousel .carousel-item-right,
    .carousel-multi-item.v-2.product-carousel .carousel-item-left {
        -webkit-transform: translateX(0);
        -ms-transform: translateX(0);
        transform: translateX(0);
    }
    
